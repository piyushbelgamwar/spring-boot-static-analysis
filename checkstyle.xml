<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">

        <!-- Rule for "password" -->
        <module name="Regexp">
            <property name="format" value="(logger|log)\.(info|warn|error)\(.*?\bpassword\b.*?\)" />
            <property name="message" value="Logging statement must not include the term 'password'. Remove or mask sensitive data." />
            <property name="ignoreComments" value="true"/>
            <property name="illegalPattern" value="true"/>
        </module>

        <!-- Rule for "username" -->
        <module name="Regexp">
            <property name="format" value="(logger|log)\.(info|warn|error)\(.*?\busername\b.*?\)" />
            <property name="message" value="Logging statement must not include the term 'username'. Remove or mask sensitive data." />
            <property name="ignoreComments" value="true"/>
            <property name="illegalPattern" value="true"/>
        </module>

