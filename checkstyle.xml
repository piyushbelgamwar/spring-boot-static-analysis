            <property name="illegalPattern" value="true"/>
        </module>

        <!-- Rule for "System.out.println" -->
        <module name="Regexp">
            <property name="format" value="(logger|log)\.(info|warn|error)\(.*?\bSystem\.out\.println\b.*?\)" />
            <property name="message" value="Logging statement must not include 'System.out.println'. Use a proper logging framework." />
            <property name="ignoreComments" value="true"/>
            <property name="illegalPattern" value="true"/>
        </module>

        <!-- Rule for "sql" -->
