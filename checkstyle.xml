<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <module name="Regexp">
            <property name="format"
                      value="(logger|log)\.(info|warn|error)\(.*?\b(password|username|aws|secret|key|credential\s+key|printstacktrace|getstacktrace|System\.out\.println|sql|query)\b.*?\)" />
            <property name="message" value="Sensitive or forbidden terms detected in logging statement." />
            <property name="ignoreComments" value="true"/>
            <property name="illegalPattern" value="true"/>
        </module>
    </module>
</module>
